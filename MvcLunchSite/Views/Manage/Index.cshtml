@model MvcLunchSite.Models.IndexViewModel
@{ var list = (List<MvcLunchSite.Models.ApplicationUser>)ViewData["UserList"];}
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>External Logins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Manage", "ManageLogins") ]
        </dd>
        
    </dl>
    @if (Model.RoleName != null)
    {
        <p>User Privileges</p>
        if (Model.RoleName.ToLower() == "orderer"|| Model.RoleName.ToLower() == "Admin"|| Model.RoleName.ToLower() == "superuser")
        {
            <p>Orderer Privileges</p>
            if (Model.RoleName.ToLower() == "Admin"|| Model.RoleName.ToLower() == "superuser")
            {
                <p>Admin Privileges</p>
                if (Model.RoleName.ToLower() == "superuser")
                {
                    <p>Superuser Privileges</p>
                    <p></p>
                    <div>
                        @foreach (var User in list)
                        {


                            if (User.Role == null)
                            {
                                <p>@Html.DisplayFor(modelItem => User.Email) &nbsp User</p>
                            }
                            else
                            {
                                <p> @Html.DisplayFor(modelItem => User.Email) &nbsp @Html.DisplayFor(modelItem => User.Role) </p>
                            }
                            <p></p>
                        }
                    </div>
                }
            }
        }

    }
    <div class="form-group">
        @{List<SelectListItem> listNumber = new List<SelectListItem>();
            listNumber.Add(new SelectListItem { Value = " ", Text = " " });
            listNumber.Add(new SelectListItem { Value = "Orderer", Text = "Orderer" });
            listNumber.Add(new SelectListItem { Value = "Admin", Text = "Admin" });
            listNumber.Add(new SelectListItem { Value = "Superuser", Text = "Superuser" });
        }
        
            <p>@Html.DropDownList("Value", listNumber) &nbsp&nbsp @Html.TextBox("Username")</p>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ChangeRole" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
